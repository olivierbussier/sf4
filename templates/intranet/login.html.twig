{#{% form_theme formCnx 'bootstrap_3_layout.html.twig' %}#}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main_page %}
    <div class="container">
        <div class="col-xs-12">

            <h1>Veuillez vous connecter:</h1>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('connexion') }}" method="post">
                <div class="form-group">
                    <input placeholder="Username" required name="_username" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion !</button>
                </div>
            </form>
        </div>

        <div class="col-xs-12">
            <p>Pas encore de compte ? <a href="{{ url('registration') }}">Inscrivez vous</a></p>

        </div>
    </div>
{% endblock %}
{% macro bouton(titre, url, window_target , class_sup, glyph) %}

    {% if class_sup == '' %}
        {% set class_list = "btn btn-light btn-outline-guc" %}
    {% else %}
        {% set class_list = class_sup %}
    {% endif %}

    {% if window_target == '' %}
        {% set target = '' %}
    {% else %}
        {% set target = " target=\"" ~ window_target ~ "\"" %}
    {% endif %}

    {% if url == '' %}
        {% set rt = " href=\"#\"" %}
    {% else %}
        {% set rt = "href=\"" ~ url ~ "\"" %}
    {% endif %}

    <a class="btn {{ class_list|raw }}" role="button" {{ rt|raw }}{{ target|raw }}>

    {% if glyph != '' %}
        <i class="fas {{ glyph }}"></i>
    {% endif %}
    {{ titre|raw }}</a>

{% endmacro %}

{% macro error(chap, sschap) %}
{% endmacro %}
